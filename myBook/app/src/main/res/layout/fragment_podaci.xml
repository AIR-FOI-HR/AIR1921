<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/podaci"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PodaciFragment">

    <EditText
        android:id="@+id/txt_podaci_ime"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/ime"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/colorDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/txt_podaci_prezime"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_podaci_ime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/prezime"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/colorDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/txt_podaci_datumrod"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_podaci_prezime"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:hint="@string/datum_rodenja"
        android:textAlignment="center"
        android:textColorHint="@color/colorDark"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_podaci_prezime" />

    <ImageView
        android:id="@+id/icon_podaci_datum"
        android:src="@mipmap/ic_date"
        android:layout_below="@+id/txt_podaci_prezime"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="@+id/txt_podaci_datumrod"
        app:layout_constraintEnd_toEndOf="@+id/txt_podaci_datumrod" />

    <EditText
        android:id="@+id/txt_podaci_email"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_podaci_datumrod"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="@color/colorDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/txt_podaci_lozinka"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_podaci_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/promijenite_lozinku"
        android:textAlignment="center"
        android:textColorHint="@color/colorDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/txt_podaci_ponlozinka"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_podaci_lozinka"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/ponovite_lozinku"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/colorDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/button_podaci_spremi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_podaci_ponlozinka"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@color/colorDark"
        android:contentDescription="@string/spremi"
        android:text="@string/spremi"
        android:textColor="@color/colorLight" />

</RelativeLayout>