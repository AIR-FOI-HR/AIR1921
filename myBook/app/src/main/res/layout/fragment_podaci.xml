<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/podaci"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PodaciFragment">

    <TextView
        android:id="@+id/labelImePrezime"
        android:text="@string/ime_i_prezime"
        android:textColor="@color/colorDark"
        android:textSize="15sp"
        android:layout_width="350dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_podaci_ime"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:layout_below="@+id/labelImePrezime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        android:textColorHint="@color/colorDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_podaci_prezime"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_below="@+id/txt_podaci_ime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/labelKorIme"
        android:text="@string/korisnicko_ime"
        android:textColor="@color/colorDark"
        android:textSize="15sp"
        android:layout_width="350dp"
        android:layout_height="22dp"
        android:layout_below="@+id/txt_podaci_prezime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_korime"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_below="@+id/labelKorIme"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/labelDatumRod"
        android:text="@string/datum_rodenja"
        android:textColor="@color/colorDark"
        android:textSize="15sp"
        android:layout_width="350dp"
        android:layout_height="22dp"
        android:layout_below="@+id/txt_korime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_podaci_datumrod"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_below="@+id/labelDatumRod"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_podaci_prezime" />

    <TextView
        android:id="@+id/labelMail"
        android:text="@string/mail_adresa"
        android:textColor="@color/colorDark"
        android:textSize="15sp"
        android:layout_width="350dp"
        android:layout_height="22dp"
        android:layout_below="@+id/txt_podaci_datumrod"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_podaci_email"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_below="@+id/labelMail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_podaci_lozinka"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:layout_below="@+id/txt_podaci_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/promjenite_lozinku"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

